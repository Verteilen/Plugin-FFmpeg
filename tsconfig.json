{
  "compilerOptions": {
    "target": "es6",
    "module": "nodenext",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": false,
    "forceConsistentCasingInFileNames": true,
    "outDir": "./dist",
    "allowJs": true,
    "removeComments": true,
    "noImplicitAny": false,
  },
  "exclude": ["./dist/**/*", "build.ts"]
}
